    <changeSet id="2021-06-08--news_politics_table_create" author="Kozlov-A">
        <createTable tableName="news_politics">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(1000)"></column>
            <column name="text" type="varchar(20000)"></column>
            <column name="dttm_inserted" type="timestamp" defaultValueComputed="now()"/>
        </createTable>
    </changeSet>

    <changeSet id="2021-06-08--news_politics_table_id_addAutoIncrement" author="Kozlov-A">
        <addAutoIncrement
                columnDataType="bigint"
                columnName="id"
                incrementBy="1"
                startWith="1"
                tableName="news_politics"/>
    </changeSet>

